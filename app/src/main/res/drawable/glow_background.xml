<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="4dp" />
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp" />
<!--            <size android:height="48dp" android:width="match_parent" />-->
        </shape>
    </item>
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_color" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
